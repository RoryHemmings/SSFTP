  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/server",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": true,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "externalConsole": false,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
      // "miDebuggerPath": "/home/rory/sudo_gdb",
    }
  ]
}